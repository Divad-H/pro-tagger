<Window x:Class="procom_tagger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:procom_tagger"
        xmlns:custom="clr-namespace:procom_tagger.Wpf"
        xmlns:repo="clr-namespace:procom_tagger.Repo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1200">
    <Window.Resources>
    </Window.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding RepositoryPath, UpdateSourceTrigger=LostFocus}"/>
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Grid.Column="1"/>
        </Grid>
        <repo:RepositoryView DataContext="{Binding Repository}" />
    </DockPanel>
</Window>
